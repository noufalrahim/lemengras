      }
      .browse-more{
        text-align: center;
        margin-left: 3%;
      }
      .card{
        width: 50%;
      }
      .size{
        margin-left: -5%;
        margin-right: 1%;
      }
      .browse-more-btn{
        margin-top: 260%;
        text-align: center;
        margin-left: 35%;
      }
      .horizontal-2{
        margin-top: 15%;
        margin-left: 10%;
      }
      .size-btn{
        text-align: center;
        margin-left: 20%;
      }
    }
  </style>



    

