<%- include("partials/header")%>
  <!-- add breadcrumb -->
  <div class="flex">
    <div class="left-side">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="picture d-block" src=<%=image1%> >

          </div>
          <div class="carousel-item">
            <img class="picture d-block" src=<%=image2%>>

          </div>
        </div>
        <a class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev" aria-hidden="true"></span>
          <span class="visually-hidden"><i class="fas fa-duotone fa-backward"></i></span>
        </a>
        <a class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next" aria-hidden="true"></span>
          <span class="visually-hidden"><i class="fas fa-duotone fa-forward"></i></span>
        </a>

      </div>
      <form action="/buynow" method="post">    
      <button type="submit" class="btn btn1 btn-dark buyow-btn" id="buynow-btn" name="gotocheckout" value="gotocheckout">BUY NOW</button>
      </form>

    </div>
    <div class="right-side">
      <div class="description">
        <hr class="horizontal">
        <br>
        <h1>
          <%=heading%>
        </h1>

        <h2>
          <%=content%>
        </h2>
        <!-- https://allensolly.abfrl.in/p/men-blue-slim-fit-print-full-sleeves-casual-shirts-803823.html -->

        <h3 id=<%=price%>>₹<%=price%></h3>


        <h5 style="color: grey"><i>⭐ 4.5/5 (700 Ratings & 5 Reviews)</i></h5>
        <br>
        <div class="size-btn" style="display: inline-block;">
          <button class="btn" name="S">S</button>
          <button class="btn" name="M">M</button>
          <button class="btn" name="L">L</button>
          <button class="btn" name="XL">XL</button>
        </div>

        <div class="accordion" id="accordionExample">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                aria-expanded="true" aria-controls="collapseOne">
                <h4>Product Description</h4>
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
              data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <P>
                  <%=description%>
                </P>
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                <h4>Product Details</h4>
              </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo"
              data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <div class="flex">
                  <div class="left">
                    <h6 class="item-details">Style Code: <span>
                        <%=StyleCode%>
                      </span></h6>
                    <h6 class="item-details">Fit: <span>
                        <%=Fit%>
                      </span></h6>
                    <h6 class="item-details">Brand: <span>
                        <%=Brand%>
                      </span></h6>

                  </div>
                  <div class="right">
                    <h6 class="item-details">Color: <span>
                        <%=Color%>
                      </span></h6>
                    <h6 class="item-details">Material: <span>
                        <%=Material%>
                      </span></h6>

                  </div>

                </div>
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                <h4>Delivery and Returns</h4>
              </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
              data-bs-parent="#accordionExample">
              <div class="accordion-body flex">
                <div class="right truck" style="margin-left: 320px;">
                  <br>
                  <i class="fa-solid fa-truck" style="margin-left: 5%;"></i>
                  <br>
                  <br>
                  <h6 style="margin-left: 5%;">All India Free Delivery</h6>
                </div>
                <div class="left arrow">
                  <br>
                  <i class="fas fa-regular fa-arrow-rotate-left" style="margin-left: 5%; font-size: 30px;"></i>
                  <br>
                  <br>
                  <h6 style="margin-left: 5%;">7 Days Return Policy</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<hr class="horizontal horizontal-2">
  <h1 class="browse-more">
    BROWSE OUR MORE ITEMS
  </h1>
  <div class="shadow-lg p-3 mb-5 bg-body rounded">

    <div class="row">
      <% for(var i=0; i<4;i++) { %>
        <div class="card col-lg-3 col-md-6 col-sm-12">


          <div id="carouselExampleIndicators1" class="carousel slide" data-bs-ride="carousel">

            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src=<%=newItemArray[i].image1%> class="d-block w-100" alt="..."/>
              </div>

              <div class="carousel-item">
                <img src=<%=newItemArray[i].image2%> class="d-block w-100" alt="..."/>
              </div>
            </div>
            <a class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators1"
              data-bs-slide="prev">
              <span class="carousel-control-prev" aria-hidden="true"></span>
              <span class="visually-hidden"><i class="fas fa-duotone fa-backward"></i></span>
            </a>
            <a class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators1"
              data-bs-slide="next">
              <span class="carousel-control-next" aria-hidden="true"></span>
              <span class="visually-hidden"><i class="fas fa-duotone fa-forward"></i></span>
            </a>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%=newItemArray[i].heading%>
            </h5>
            <p class="card-text">
              <%=newItemArray[i].content%>
            </p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>₹<%=newItemArray[i].price%></b></li>
            <li class="list-group-item"><button class="btn btn-dark size">L</button><button
                class="btn btn-dark size">M</button><button class="btn btn-dark size">S</button><button
                class="btn btn-dark size">XL</button></li>
          </ul>
        </div>
        <% } %>
    </div>
    <div style="position: relative;">
      <button class="btn-primary browse-more-btn">BROWSE MORE</button>
    </div>  
  </div>

 
  
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@100&display=swap');

    .btn-primary {
      margin-top: 52rem;
