<%- include("partials/header")%>

<h1 class="title-heading">PANTS</h1> 
<div class="row">
  <% for(var i=0; i<newItemArray.length;i++) { %>
    <div class="card col-lg-3 col-md-6 col-sm-12">
      

<div id="carouselExampleIndicators1" class="carousel slide" data-bs-ride="carousel">
  
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src=<%=newItemArray[i].image1%> class="d-block w-100" alt="..."/>
    </div>
    
    <div class="carousel-item">
      <img src=<%=newItemArray[i].image2%> class="d-block w-100" alt="..."/>
    </div>
  </div>
  <a class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide="prev">
    <span class="carousel-control-prev" aria-hidden="true"></span>
    <span class="visually-hidden"><i class="fas fa-duotone fa-backward"></i></span>
  </a>
  <a class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide="next">
    <span class="carousel-control-next" aria-hidden="true"></span>
    <span class="visually-hidden"><i class="fas fa-duotone fa-forward"></i></span>
  </a>
</div>
        <div class="card-body">
          <h5 class="card-title"><%=newItemArray[i].heading%></h5>
          <p class="card-text"><%=newItemArray[i].content%></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><b>â‚¹<%=newItemArray[i].price%></b></li>
          <li class="list-group-item"><button class="btn btn-dark size">L</button><button class="btn btn-dark size">M</button><button class="btn btn-dark size">S</button><button class="btn btn-dark size">XL</button></li>
          
        </ul>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <form action="/pantspage" method="post">    
            <button  id="btn-buynow" class="btn btn-dark btn-buynow" type="submit" name="id1" value=<%=newItemArray[i].id%> >BUY NOW</button>
            <button  id="btn-addtocart" class="btn btn-dark btn-addtocart" type="submit" name="id2" value=<%=newItemArray[i].id%>>ADD TO CART</button>
          </form>
          </ul>
        </div>
      </div>
      <% } %>
      </div>
      <style>
        
        @media only screen and (max-width: 768px) {
          .card{
            width: 50%;
          }
          .size{
            margin-left: -8.5%;
          }
          .btn-buynow{
            position: relative;
            left: -0.5%;
            border-radius: 25px;
            padding-left: 10%;
            padding-right: 10%;
            
          }
          .btn-addtocart{
            margin-top: 5%;
            margin-left: 15%;
            border-radius: 25px;

          }
        }
      </style>

   



